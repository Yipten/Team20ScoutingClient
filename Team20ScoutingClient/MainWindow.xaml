<Window x:Class="Team20ScoutingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team20ScoutingClient"
        mc:Ignorable="d"
        Icon="Resources\20-SSG-Whiteletter.png"
        Title="Team 20 Scouting Client" MinWidth="400" MinHeight="225" WindowState="Maximized" FontFamily="Lucida Sans" FontSize="12" Background="Black">
    <Grid>
        <TabControl Background="Black">
            <TabItem x:Name="BoxplotTI" GotFocus="BoxplotTI_GotFocus">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Boxplot"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <Canvas x:Name="Team1SwitchBP" Width="400" Height="150" HorizontalAlignment="Left" Margin="5"/>
                        <Canvas x:Name="Team1ScaleBP" Width="400" Height="150" HorizontalAlignment="Left" Margin="5"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="LinegraphTI" GotFocus="LinegraphTI_GotFocus">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Line Graph"/>
                    </StackPanel>
                </TabItem.Header>
                <StackPanel Orientation="Vertical">
                    <Canvas x:Name="Team1SwitchLG" Width="300" Height="200" HorizontalAlignment="Left" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
