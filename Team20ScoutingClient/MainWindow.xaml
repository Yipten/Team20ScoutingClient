<Window x:Class="Team20ScoutingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team20ScoutingClient"
        mc:Ignorable="d"
        Icon="Resources\20-SSG-Whiteletter.png"
        Title="Team 20 Scouting Client" MinWidth="400" MinHeight="225" WindowState="Maximized" FontFamily="Lucida Sans" FontSize="12" Background="Black">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TabControl Background="Black" BorderThickness="0">
                <TabItem x:Name="BoxplotTI">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Boxplot"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical">
                            <Canvas x:Name="Team1SwitchBP" Width="400" Height="150" HorizontalAlignment="Left" Margin="5"/>
                            <Canvas x:Name="Team1ScaleBP" Width="400" Height="150" HorizontalAlignment="Left" Margin="5"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem x:Name="LinegraphTI">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Line Graph"/>
                        </StackPanel>
                    </TabItem.Header>
                    <StackPanel Orientation="Vertical">
                        <Canvas x:Name="Team1SwitchLG" Width="300" Height="200" HorizontalAlignment="Left" Margin="5"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Teams">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="TeamCB" SelectionChanged="TeamCB_SelectionChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TeamsTabTitle" Foreground="White" FontSize="24"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Canvas x:Name="TeamCargoDeliverShipCanvas" Width="400" Height="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click" Width="75" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
