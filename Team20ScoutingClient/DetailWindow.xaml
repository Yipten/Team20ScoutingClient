<Window x:Class="Team20ScoutingClient.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team20ScoutingClient"
        mc:Ignorable="d"
        Icon="Resources\20-SSG-Whiteletter.png"
        Title="Detail View" Width="400" Height="300" MinWidth="250" MinHeight="200" WindowState="Normal" FontFamily="Lucida Sans" FontSize="12" Foreground="White" Background="Black">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock x:Name="DetailsTB" Margin="5"/>
            </ScrollViewer>
            <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="75" Height="25" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
